#!/bin/bash

# Check if the required version argument is passed
if [ -z "$1" ]; then
    echo "Error: No version supplied for Marqo container."
    echo "Usage: ./start_marqo.sh <marqo_from_version>"
    exit 1
fi

MARQO_FROM_VERSION=$1

# Start the Marqo container (from_version) with a shared volume
docker run -d --name marqo_from_version -v /shared_volume:/data marqoai/marqo:$MARQO_FROM_VERSION

if [ $? -eq 0 ]; then
    echo "Marqo $MARQO_FROM_VERSION started successfully."
else
    echo "Failed to start Marqo $MARQO_FROM_VERSION."
    exit 1
fi
